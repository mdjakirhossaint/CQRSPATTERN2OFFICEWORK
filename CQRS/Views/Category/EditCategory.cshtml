@model CQRS.BLL.Models.Category.CUDHandellerModel.UpdateCategoryHandellerModel

@{
    ViewData["Title"] = "EditCategory";
}

<h1>Edit Category</h1>
<p style="color:red">@TempData["Message"]</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="@Model.ID"/>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"> Category Name</label>
                <input asp-for="@Model.CategoryName" class="form-control" />
                <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
